<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:id="@+id/layout_movie"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/shape_movie_item_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_image_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_top_left="15dp"
        app:riv_corner_radius_top_right="15dp" />

    <TextView
        android:id="@+id/tv_watchGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="@id/iv_movie_poster"
        app:layout_constraintBottom_toBottomOf="@id/iv_movie_poster"/>

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:shadowColor="@color/text_shadow"
        android:shadowRadius="7.0"
        android:shadowDx="7.0"
        android:shadowDy="7.0"
        android:padding="3dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:text="영화 제목..."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_movie_poster" />

    <TextView
        android:id="@+id/tv_bookingRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예매율 0.0% · "
        android:textColor="@color/category_txt"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tv_movie_title"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"/>

    <TextView
        android:id="@+id/tv_userRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="12dp"
        android:textColor="@color/category_txt"
        android:drawableStart="@drawable/ic_star"
        android:drawableTint="@color/grade_star"
        app:layout_constraintStart_toEndOf="@id/tv_bookingRate"
        app:layout_constraintTop_toTopOf="@id/tv_bookingRate"/>

    <ImageView
        android:id="@+id/btn_book"
        android:layout_width="85dp"
        android:layout_height="28dp"
        android:background="@drawable/shape_book_btn_rounded"
        android:layout_marginVertical="13dp"
        app:layout_constraintStart_toStartOf="@id/tv_bookingRate"
        app:layout_constraintTop_toBottomOf="@id/tv_bookingRate"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바로예매"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/btn_book"
        app:layout_constraintTop_toTopOf="@id/btn_book"
        app:layout_constraintEnd_toEndOf="@id/btn_book"
        app:layout_constraintBottom_toBottomOf="@id/btn_book"/>



</androidx.constraintlayout.widget.ConstraintLayout>